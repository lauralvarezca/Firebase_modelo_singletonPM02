<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Firebase_modelo_singleton.Page_update"
             Title="Actualizar Persona">

    <StackLayout Padding="20">
        <!-- Campo de Texto para Nombre -->
        <Entry x:Name="nombreEntry" Placeholder="Nombre" FontSize="16" Margin="0,0,0,10" />

        <!-- Campo de Texto para Edad -->
        <Entry x:Name="edadEntry" Placeholder="Edad" Keyboard="Numeric" FontSize="16" Margin="0,0,0,10"/>

        <!-- BotÃ³n Actualizar -->
        <Button x:Name="actualizarButton" Text="Actualizar" Clicked="actualizarButton_Clicked" BackgroundColor="#4CAF50" TextColor="White" FontSize="16" Margin="0,0,0,10"/>
    </StackLayout>

</ContentPage>
